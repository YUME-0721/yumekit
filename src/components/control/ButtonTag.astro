---
interface Props {
	size?: string;
	dot?: boolean;
	href?: string;
	label?: string;
	reload?: boolean;
}
const { dot, href, label, reload }: Props = Astro.props;
---
<a href={href} aria-label={label} data-no-swup={reload ? "" : undefined} class="btn-regular h-8 text-sm px-3 rounded-lg">
    {dot && <div class="h-1 w-1 bg-[var(--btn-content)] dark:bg-[var(--card-bg)] transition rounded-md mr-2"></div>}
    <slot></slot>
</a>
